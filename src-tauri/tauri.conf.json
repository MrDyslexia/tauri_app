{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Assistant Overlay",
  "version": "0.1.0",
  "identifier": "com.aiassistant.overlay",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AI Assistant",
        "minHeight": 150,
        "maxHeight": 500,
        "minWidth": 150,
        "maxWidth": 400,
        "resizable": true,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "fullscreen": false,
        "visible": true,
        "shadow": false,
        "skipTaskbar": false,
        "center": false,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
