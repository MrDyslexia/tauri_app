{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "assist_tauri_app",
  "version": "0.1.0",
  "identifier": "com.assist_tauri_app.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
    {
      "label": "main",
      "title": "assist_tauri_app",
      "width": 400,
      "height": 500,
      "resizable": false,
      "alwaysOnTop": true,
      "transparent": true,
      "decorations": true,
      "fullscreen": false,
      "visible": true,
      "shadow": true
    }
  ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
